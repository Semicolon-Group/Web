{% extends "member_base.html.twig" %}

{% block title %}Events{% endblock %}

{% block banner_img %}
    {{ asset('member_assets/img/banner/banner-bg-1.jpg') }}
{% endblock %}

{% block banner_title %}Events{% endblock %}

{% block body %}
    <!--================Blog grid Area =================-->
    <section class="blog_grid_area sticky_story_area">
        <div class="container">
            <div class="welcome_title">
                <h3>haithem</h3>
                <img src="{{ asset('member_assets/') }}img/w-title-b.png" alt="">
            </div>
            <aside class="s_widget search_widget">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search Here">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </span>
                </div>
            </aside>
            <div class="row m0">
                    <div class="blog_grid_inner sticky_slider">
                        {% for event in events %}
                        <div class="item">
                            <div class="blog_grid_item">
                                <div class="blog_grid_img">
                                    <img src="{{ asset('business_assets/images/img_event/') }}{{ event.photoUrl }}" alt="">
                                    <div class="author_name">
                                        <h4>{{ event.title }}</h4>
                                    </div>
                                </div>
                                <div class="blog_grid_content">
                                    <h3>{{ event.title }}</h3>
                                    <div class="blog_grid_date">
                                        <a href="#">{{ event.business }}</a>
                                        <a href="#">{{ event.startDate | date('y-M-d') }}</a>
                                        <a href="#">Dating</a>
                                    </div>
                                    <p>{{ event.content }}</p>
                                    <a href="#">Read More <i class="fa fa-angle-double-right"></i></a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
            </div>
        </div>
    </section>
    <!--================End Blog grid Area =================-->


    <!--================End Blog grid Area =================-->
{% endblock %}