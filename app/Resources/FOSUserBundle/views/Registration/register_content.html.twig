            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
        </div>
        <!-- Main wrapper  -->
        <div id="main-wrapper" style="background-image: url({{ asset('member_assets/img/back_pattern.png') }}); background-repeat: repeat;">

            <div class="unix-login">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-lg-4">
                            <div class="login-content card">
                                <div class="login-form">
                                    <h4>Register</h4>
                                    {{ form_errors(form) }}
                                    <div class="form-group">
                                        {{ form_label(form.email) }}
                                        <div class="text-danger">
                                            {{ form_errors(form.email) }}
                                        </div>
                                        {{ form_widget(form.email, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Email'} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.username) }}
                                        <div class="text-danger">
                                        {{ form_errors(form.username) }}
                                        </div>
                                        {{ form_widget(form.username, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Username', 'required': 'true'} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.plainPassword.first) }}
                                        <div class="text-danger">
                                        {{ form_errors(form.plainPassword.first) }}
                                        </div>
                                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Password'} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.plainPassword.second) }}
                                        <div class="text-danger">
                                        {{ form_errors(form.plainPassword.second) }}
                                        </div>
                                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Confirm Password'} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.phone) }}
                                        <div class="text-danger">
                                        {{ form_errors(form.phone) }}
                                        </div>
                                        {{ form_widget(form.phone, { 'attr': {
                                            'class': "form-control third-control control",
                                            'placeholder': "Phone number",
                                            'min': 11111111,
                                            'max': 99999999,
                                            'required': 'true'
                                        } }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.category) }}
                                        <div class="text-danger">
                                        {{ form_errors(form.category) }}
                                        </div>
                                        {{ form_widget(form.category, { 'attr': {'class': "form-control first-control control"} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.priceRange) }}
                                        <div class="text-danger">
                                        {{ form_errors(form.priceRange) }}
                                        </div>
                                        {{ form_widget(form.priceRange, { 'attr': {'class': "form-control first-control control"} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.link, "Facebook Page Link") }}
                                        <div class="text-danger">
                                        {{ form_errors(form.link) }}
                                        </div>
                                        {{ form_widget(form.link, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Link'} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.roles, {'attr': {'style': 'display: none;', 'class': "form-control first-control control", 'placeholder': 'Link'} }) }}
                                    </div>
                                    <button id="final_register" style="margin-bottom: 20px; margin-left: 10px;" type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary btn-flat m-b-30 m-t-30">Register</button>
                                    <div class="register-link m-t-15 text-center">
                                        <p>Already have account ? <a href="{{ path('homepage') }}"> Sign in</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- End Wrapper -->
        <!-- All Jquery -->
        <script src="{{ asset('business_assets/') }}js/lib/jquery/jquery.min.js"></script>
        <!-- Bootstrap tether Core JavaScript -->
        <script src="{{ asset('business_assets/') }}js/lib/bootstrap/js/popper.min.js"></script>
        <script src="{{ asset('business_assets/') }}js/lib/bootstrap/js/bootstrap.min.js"></script>
        <!-- slimscrollbar scrollbar JavaScript -->
        <script src="{{ asset('business_assets/') }}js/jquery.slimscroll.js"></script>
