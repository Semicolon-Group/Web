<html>
<header>
    <link href="{{ asset('member_assets/css/bootstrap.min.css') }}" rel="stylesheet">
</header>
<body>
{% block body %}
    <h1>Usersignals list</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <input type="submit" value="search" />
    {{ form_end(form) }}

    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Receiver</th>
                <th>Sender</th>
                <th>Reason</th>
                <th>Date</th>
                <th>State</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        {% for userSignal in userSignals %}
            <tr>
                <td>{% if userSignal.receiver.username is defined and userSignal.receiver.username is not null %} {{ userSignal.receiver.username }} {% endif %}</td>
                <td>{% if userSignal.sender.username is defined and userSignal.sender.username is not null %} {{ userSignal.sender.username }} {% endif %}</td>
                <td>
                    {% if userSignal.reason is not null %}
                        {% if 0 == userSignal.reason %} Inappropriate_Content
                        {% elseif 1 == userSignal.reason %} Racism
                        {% elseif 2 == userSignal.reason %} Violence
                        {% elseif 3 == userSignal.reason %} Harrassment
                        {% elseif 4 == userSignal.reason %} False_Profile
                        {% elseif 5 == userSignal.reason %} Other
                        {% endif %}
                    {% endif %}
                </td>
                <td>{% if userSignal.date %}{{ userSignal.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if userSignal.state %}Consulted{% else %}Non_consulted{% endif %}</td>
                <td><a class="btn btn-info" href="{{ path('Signal_show', { 'id': userSignal.id }) }}">
                        Show content
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th>Receiver</th>
            <th>Sender</th>
            <th>Reason</th>
            <th>Date</th>
            <th>State</th>
            <th>Content</th>
        </tr>
        </tfoot>
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(userSignals) }}
    </div>
    <script src="{{ asset('member_assets/js/jquery-2.1.4.min.js') }}"></script>

    <script src="{{asset('datatable_assets/js/jquery.dataTables.min.js')}}"></script>
    <script src="{{asset('datatable_assets/js/jquery.dataTables.bootstrap.min.js')}}"></script>

    <script type="text/javascript">

        jQuery(function($) {

            // Setup - add a text input to each footer cell
            $('#dynamic-table tfoot th').each( function () {
                var title = $(this).text();
                $(this).html( '<input type="text" placeholder="Search '+title+'" />' );
            } );

            //initiate dataTables plugin
            var tableSignal =
                    $('#dynamic-table')
                            .DataTable(
                                    {

                                        //search boxes on top without replacing the columns titles
                                        'initComplete' : function()
                                        {
                                            var r = $('#dynamic-table tfoot tr');
                                            r.find('th').each(function(){
                                                $(this).css('padding', 8);
                                            });
                                            $('#dynamic-table thead').append(r);
                                            $('#search_0').css('text-align', 'center');
                                        },

                                        bAutoWidth: false,
                                        "aoColumns": [
                                            null,
                                            null,
                                            null,
                                            null,
                                            null,
                                            null
                                        ],
                                        "aaSorting": [],
                                        "bPaginate":false,

                                    } );

            tableSignal.columns().every( function () {
                var that = this;

                $( 'input', this.footer() ).on( 'keyup change', function () {
                    if ( that.search() !== this.value ) {
                        that
                                .search( this.value )
                                .draw();
                    }
                } );
            } );


        } );

    </script>

{% endblock %}
</body>
</html>