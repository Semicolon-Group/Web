{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    <div id="first" class="form-group">
        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': "form-control first-control", 'placeholder': 'Email'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.firstname, { 'attr': {'class': "form-control first-control", 'placeholder': 'Firstname'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.lastname, { 'attr': {'class': "form-control first-control", 'placeholder': 'Lastname'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.username, { 'attr': {'class': "form-control first-control", 'placeholder': 'Username'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': "form-control first-control", 'placeholder': 'Email'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': "form-control first-control", 'placeholder': 'Password'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': "form-control first-control", 'placeholder': 'Confirm Password'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.gender, { 'attr': {'class': "first-control" } }) }}
        </div>
    </div>
    <div id="second" class="form-group">
        <div class="form-group">
            <label for="fos_user_registration_form_birthDate">Birthday</label>
            {{ form_widget(form.birthDate, { 'attr': {'class': "form-control second-control", 'placeholder': "Birthday" } }) }}
        </div>
        <label>Looking for {% if(form.gender) %}girls{% else %}guys{% endif %} between</label>
        <div class="row">
            <div class="form-group col-xs-6">
                {{ form_widget(form.minAge, { 'attr': {'class': "form-control second-control", 'value': 18, 'min': 18, 'placeholder': 'Min age' } }) }}
            </div>
            <div class="form-group col-xs-6">
                {{ form_widget(form.maxAge, { 'attr': {'class': "form-control second-control", 'placeholder': 'Max age' } }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(form.height, { 'attr': {'class': "form-control second-control", 'placeholder': "Height" } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.bodyType, { 'attr': {'class': "second-control" } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.relegion, { 'attr': {'class': "second-control" } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.relegionImportance, { 'attr': {'class': "second-control" } }) }}
        </div>
    </div>
    <div id="third" class="form-group">
        <div class="form-group">
            {{ form_widget(form.childrenNumber, { 'attr': {'class': "form-control third-control", 'placeholder': "Number of children" } }) }}
        </div>
        <div class="form-group">
            <label>Do you smoke?</label>
            {{ form_widget(form.smoker, { 'attr': {'class': "form-control third-control"} }) }}
            <label for="fos_user_registration_form_smoker">Yes</label>
        </div>
        <div class="form-group">
            <label>Do you drink?</label>
            {{ form_widget(form.drinker, { 'attr': {'class': "form-control third-control"} }) }}
            <label for="fos_user_registration_form_drinker">Yes</label>
        </div>
        <div class="form-group">
            {{ form_widget(form.phone, { 'attr': {'class': "form-control third-control", 'placeholder': "Phone number"} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.civilStatus, { 'attr': {'class': "second-control" } }) }}
        </div>
        <div class="form-group">
            <label>Preferd marital statuses</label>
            {{ form_widget(form.preferedStatuses, { 'attr': {'class': "second-control" } }) }}
        </div>
        <div class="form-group">
            <label>Preferd relations</label>
            {{ form_widget(form.preferedRelations, { 'attr': {'class': "second-control" } }) }}
        </div>
    </div>
    <div id="fourth" class="form-group">
        <div class="form-group">
            {{ form_widget(form.about, { 'attr': {'class': "form-control third-control", 'placeholder': "About" } }) }}
        </div>
    </div>
<div class="reg_chose form-group">
    <div id="step_one">
        <button type="button" style="margin-bottom: 20px;" class="btn form-control login_btn next_step">Register</button>
    </div>
    <div id="step_two">
        <button type="button" style="margin-bottom: 20px; margin-left: 10px;" class="btn form-control login_btn scd_step">Next</button>
        <button type="button" style="margin-bottom: 20px;" class="btn form-control login_btn bck_scd_step">Back</button>
    </div>
    <div id="step_three">
        <button type="button" style="margin-bottom: 20px; margin-left: 10px;" class="btn form-control login_btn thrd_step">Next</button>
        <button type="button" style="margin-bottom: 20px;" class="btn form-control login_btn bck_thrd_step">Back</button>
    </div>
    <div id="step_four">
        <button type="submit" value="{{ 'registration.submit'|trans }}" class="btn form-control login_btn">Register</button>
    </div>
</div>
{{ form_end(form) }}
