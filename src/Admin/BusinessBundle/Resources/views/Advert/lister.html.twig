{% extends 'admin_base.html.twig' %}


{% block title %}AdminBusinessBundle:Advert:Lister{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('admin_assets/') }}css/style.css">
{% endblock %}
{% block scripts %}
    <script src="{{ asset('business_assets/') }}js/jq/jquery.countdown.js"></script>
    <script src="{{ asset('business_assets/') }}js/jq/jquery.countdown.min.js"></script>
    <script >
        {% for m in pubs %}
        {% for i in [1..10] %}
        $(document).ready(function () {

            $('#{{ m.id }}')
                .countdown("{{ m.endDate | date('Y/m/d')}}",  function (event) {
                    $(this).text(
                        event.strftime('%D days %H:%M:%S')
                    );
                });

        });
        {% endfor %}
        {% endfor %}
        {% for m in pubs %}

        $('#dlt{{ m.id }}').click(function (){
            $('#a{{ m.id }}').remove();
            $.ajax({
                url: "{{path('supprimer_admin')}}",
                type: "POST",
                cache: false,
                data: {
                    "id" : {{ m.id }}
                }

            });
        });
        {% endfor %}


        $('#delete').click(function (){
            var id = $("#selected_post").data('id');
            $('#a'+id).remove();
            $.ajax({
                url: "{{path('delete_post_business')}}",
                type: "POST",
                cache: false,
                data: {
                    "id" : id
                }

            });

        });


        function showDeleteModal(id) {
            $("#selected_post").data('id',id);
        }
    </script>


{% endblock %}
  {% block navbar %}
      <!-- NAVBAR -->
      <nav class="navbar navbar-default navbar-fixed-top">
