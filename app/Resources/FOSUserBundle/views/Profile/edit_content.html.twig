{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

<div class="card-content">
    <span class="card-title">Edit Profile</span>
    <hr/>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="form-group">
                <label for="fos_user_profile_form_email">Email</label>
                {{ form_widget(form.email, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Email'} }) }}
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_firstname">Firstname</label>
                {{ form_widget(form.firstname, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Firstname', 'required': 'true'} }) }}
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_lastname">Lastname</label>
                {{ form_widget(form.lastname, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Lastname', 'required': 'true'} }) }}
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_username">Username</label>
                {{ form_widget(form.username, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Username', 'required': 'true'} }) }}
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_gender">Gender</label>
                {{ form_widget(form.gender, { 'attr': {'class': "first-control control", 'required': 'true' } }) }}
            </div><div class="form-group">
                <label for="fos_user_profile_form_birthDate">Birthday</label>
                {{ form_widget(form.birthDate, { 'attr': {'class': "form-control second-control control", 'placeholder': "Birthday", 'required': 'true' } }) }}
            </div>
            <label>Looking for {% if(form.gender) %}girls{% else %}guys{% endif %} between</label>
            <div class="row">
                <div class="form-group col-xs-6">
                    {{ form_widget(form.minAge, { 'attr': {
                        'class': "form-control second-control control",
                        'value': 18,
                        'min': 18,
                        'max': 69,
                        'placeholder': 'Minimum age',
                        'onChange': 'updateMaxAge()',
                        'required': 'true',
                        'pattern': '\d*'
                    } }) }}
                </div>
                <div class="form-group col-xs-6">
                    {{ form_widget(form.maxAge, { 'attr': {
                        'class': "form-control second-control control",
                        'value': 19,
                        'min': 19,
                        'max': 70,
                        'placeholder': 'Maximum age',
                        'required': 'true',
                        'pattern': '\d*'
                    } }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_height">Height</label>
                {{ form_widget(form.height, { 'attr': {
                    'class': "form-control second-control control",
                    'placeholder': "Height",
                    'required': 'true',
                    'pattern': "^([1-3])(?:\.[0-9][0-9]?)?$",
                    'title': "Height must be between 1 and 3 meters"
                } }) }}
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_bodyType">Body Type</label>
                {{ form_widget(form.bodyType, { 'attr': {'class': "second-control control", 'required': 'true'  } }) }}
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_relegion">Religion</label>
                {{ form_widget(form.relegion, { 'attr': {'class': "second-control control", 'required': 'true'  } }) }}
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_relegionImportance">Religion Importance</label>
                {{ form_widget(form.relegionImportance, { 'attr': {'class': "second-control control", 'required': 'true'  } }) }}
            </div><div class="form-group">
                <label for="fos_user_profile_form_childrenNumber">Number of children</label>
                {{ form_widget(form.childrenNumber, { 'attr': {'class': "form-control third-control control", 'placeholder': "Number of children", 'min': 0, 'max': 10, 'step': 1, 'required': 'true'  } }) }}
            </div>
            <div class="form-group">
                <label style="margin-right: 50px;">Do you smoke?</label>
                {{ form_widget(form.smoker, { 'attr': {'class': "third-control control"} }) }}
                <label for="fos_user_profile_form_smoker">Yes</label>
            </div>
            <div class="form-group">
                <label style="margin-right: 50px;">Do you drink?</label>
                {{ form_widget(form.drinker, { 'attr': {'class': "third-control control"} }) }}
                <label for="fos_user_profile_form_drinker">Yes</label>
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_phone">Phone Number</label>
                {{ form_widget(form.phone, { 'attr': {
                    'class': "form-control third-control control",
                    'placeholder': "Phone number",
                    'min': 11111111,
                    'max': 99999999,
                    'required': 'true'
                } }) }}
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_civilStatus">Civil Status</label>
                {{ form_widget(form.civilStatus, { 'attr': {'class': "second-control control", 'required': 'true' } }) }}
            </div>
            <div style="margin-bottom: 10px;">
                <label>Address </label><button type="button" class="btn btn-default btn-sm" style="float: right;" id="locate"><span class="glyphicon glyphicon-screenshot"></span> Locate me</button>
            </div>
            <div class="row">
                <div class="form-group col-xs-7">
                    {{ form_widget(form.address.city, { 'attr': {'class': "form-control third-control control", 'placeholder': "City", 'required': 'true' } }) }}
                </div>
                <div class="form-group col-xs-5">
                    {{ form_widget(form.address.country, { 'attr': {'class': "form-control third-control control", 'placeholder': "Country", 'required': 'true', 'readonly': 'true'} }) }}
                </div>
                <div class="form-group col-xs-6">
                    {{ form_widget(form.address.latitude, { 'attr': {'style': 'display: none;' } }) }}
                </div>
                <div class="form-group col-xs-6">
                    {{ form_widget(form.address.longitude, { 'attr': {'style': 'display: none;' } }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="fos_user_profile_form_current_password">Current Password</label>
                {{ form_errors(form) }}
                {{ form_errors(form.current_password) }}
                {{ form_widget(form.current_password, { 'attr': {'class': "form-control third-control control"} }) }}
            </div>
        </div>
    </div>
</div>
<div class="card-action">
    <div class="row">
        <input style="float: right; margin-right: 20px; width: 200px;" type="submit" class="btn btn-default" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
</div>
{{ form_end(form) }}