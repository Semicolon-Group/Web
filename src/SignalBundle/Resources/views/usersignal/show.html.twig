{% extends "admin_base.html.twig" %}

{% block title %}Content{% endblock %}

{% block banner_img %}

{% endblock %}

{% block banner_title %}Content{% endblock %}


{% block body %}
    <br><br><br><br>
    <li><a href="" data-toggle="modal" data-target="#feedback_modal" ><strong style="font-size: 20px">Show the Content of Signal</strong></a></li>
    <div id="feedback_modal" class="modal fade centered-modal" role="dialog" style="margin-top: 30vh; ">
        <div class="modal-dialog" style="width: 45%; ">
            <div class="modal-content" style="border-color: #0b5b97" >
                <div class="modal-header" style="background-color: #ffffcc">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <center><h2 class="modal-title" style="color: #384659"><strong>Signal Content</strong></h2></center>
                </div>

                <div class="modal-body" STYLE="height: 100%" ><br>
                    <p style="color: #000000; font-size: 18px" ><strong>{{ userSignal.sender.username }}</strong> : {{ userSignal.content }}</p>
                    <br><br>
                </div>
            </div>
        </div>
    </div>

    <li>
        <a href="{{ path('Signal_index') }}"><strong style="font-size: 20px">Back to the list</strong></a>
    </li>


{% endblock %}

