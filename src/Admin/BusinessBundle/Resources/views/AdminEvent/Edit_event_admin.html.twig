{% extends 'admin_base.html.twig' %}
{% block title %}Admin | Businesses{% endblock %}
{% block page_title %}Businesses{% endblock %}
{% block navbar %}
    <!-- NAVBAR -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="brand">
            <a href="index.html"><img src="{{ asset('admin_assets/') }}img/logo-dark.png" alt="Klorofil Logo" class="img-responsive logo"></a>
        </div>
        <div class="container-fluid">
            <div class="navbar-btn">
                <button type="button" class="btn-toggle-fullwidth"><i class="lnr lnr-arrow-left-circle"></i></button>
            </div>
            <form class="navbar-form navbar-left">
                <div class="input-group">
                    <input type="text" value="" class="form-control" placeholder="Search dashboard...">
                    <span class="input-group-btn"><button type="button" class="btn btn-primary">Go</button></span>
                </div>
            </form>
            <div id="navbar-menu">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle icon-menu" data-toggle="dropdown">
                            <i class="lnr lnr-alarm"></i>
                            <span class="badge bg-danger">{% block notifications_number %}{{ notifs |length }}  {% endblock %}</span>
                        </a>
                        <ul class="dropdown-menu notifications">
                            {% block notifications %}
                                {% for m in notifs %}
                                    <li><a href="{{ path('Admin_events_edit', {'id':m.id}) }}" class="notification-item"><span class="dot bg-warning"></span> New Add : {{ m.content }} </a></li>
                                {% endfor %}
                            {% endblock %}

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="{{ asset('admin_assets/') }}img/user.png" class="img-circle" alt="Avatar"> <span>Admin</span> <i class="icon-submenu lnr lnr-chevron-down"></i></a>
                        <ul class="dropdown-menu">
                            <li><a href="#"><i class="lnr lnr-envelope"></i> <span>Message</span></a></li>
                            <li><a href="#"><i class="lnr lnr-cog"></i> <span>Settings</span></a></li>
                            <li><a href="#"><i class="lnr lnr-exit"></i> <span>Logout</span></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}

    <!--================Blog grid Area =================-->
    <section class="blog_grid_area sticky_story_area">
        <div class="container">
            <div class="item">
                <div class="blog_grid_item">
                    <div class="blog_grid_img">
                        <div class="blog_grid_img">
                            <img src="{{ asset('business_assets/images/img_event/') }}{{ event.photoUrl }}" alt="">
                        </div>
                    </div>
                    <div class="blog_grid_content">
                        <h3>Name event: {{ event.title }}</h3>
                        <div class="blog_grid_date">
                            <h4>Business : <a href="#">{{event.business }}</a></h4>
                            <h4>Date : <a href="#">{{ event.startDate | date('y-M-d') }}</a></h4>
                        </div>
                        <h4><p>Content :{{ event.content }}</p></h4>



                    </div>
                </div>
            </div>
        </div>

        {{ form_start(edit_form) }}

        <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                <label  style="color: #0a0a0a" class="control-label" for="first-name">state </label><br>
                {{ form_widget(edit_form.state, {'attr':{'class':'form-control','required':'true'}}) }}
            </div>
        </div>

        <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                <label  style="color: #0a0a0a" class="control-label" for="first-name">reason </label><br>
                {{ form_widget(edit_form.reason, {'attr':{'class':'form-control','required':'true'}}) }}
            </div>
        </div>
       {{ form_widget(edit_form.title,{'attr':{'style':'display:none;'}}) }}
       {{ form_widget(edit_form.content,{'attr':{'style':'display:none;'}}) }}
       {{ form_widget(edit_form.startDate,{'attr':{'style':'display:none;'}}) }}
       {{ form_widget(edit_form.endDate,{'attr':{'style':'display:none;'}}) }}
       {{ form_widget(edit_form.maxPlaces,{'attr':{'style':'display:none;'}}) }}
       {{ form_widget(edit_form.address,{'attr':{'style':'display:none;'}}) }}
        {{ form_end(edit_form) }}  </section>


{% endblock %}