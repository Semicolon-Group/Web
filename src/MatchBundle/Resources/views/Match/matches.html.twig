{% block body %}
    <!-- Data -->
    <div id="filter-path" data-path="{{ path("filter") }}"></div>

    <!-- Filter -->
    <div class="filler"></div>

    <div class="filter">
        <!--Age-->
        <div class="criteria">
            <label for="age-amount" class="filter-label">Age:</label>
            <input type="text" class="slider-amount choice-label" id="age-amount" readonly value="18 - 100" autocomplete="off">
            <div id="age-slider" class="slider"></div>
        </div>
        <!--Height-->
        <div class="criteria">
            <label for="height-amount" class="filter-label">Height:</label>
            <input type="text" class="slider-amount choice-label" id="height-amount" readonly value="150cm - 250cm" autocomplete="off">
            <div id="height-slider" class="slider"></div>
        </div>
        <!--Distance-->
        <div class="criteria">
            <label for="distance" class="filter-label">Distance:</label>
            <select id="distance" class="form-control form-control-sm select" autocomplete="off">
                <option value="" selected disabled>Please choose...</option>
                {% for distance in distance %}
                    <option value="{{ distance }}">{{ distance }}</option>
                {% endfor %}
            </select>
        </div>
        <!--Last Login-->
        <div class="criteria">
            <label for="last-login" class="filter-label">Last Login:</label>
            <select id="login" class="form-control form-control-sm select" autocomplete="off">
                <option value="" selected disabled>Less than...</option>
                {% for lastLogin in lastLogin %}
                    <option value="{{ lastLogin }}">{{ lastLogin }}</option>
                {% endfor %}
            </select>
        </div>
        <!--Smokes-->
        <div class="criteria">
            <label for="last-login" class="filter-label">Smokes:</label>
            <input class="form-check-input" type="radio" id="yesSmoke" name="smokes" value="1" autocomplete="off">
            <label class="form-check-label choice-label" for="yesSmoke">
                Yes
            </label>
            <input class="form-check-input" type="radio" id="noSmoke" name="smokes" value="0" autocomplete="off">
            <label class="form-check-label choice-label" for="noSmoke">
                No
            </label>
        </div>
        <!--Drinks-->
        <div class="criteria">
            <label for="last-login" class="filter-label">Drinks:</label>
            <input class="form-check-input" type="radio" id="yesDrink" name="drinks" value="1" autocomplete="off">
            <label class="form-check-label choice-label" for="yesDrink">
                Yes
            </label>
            <input class="form-check-input" type="radio" id="noDrink" name="drinks" value="0" autocomplete="off">
            <label class="form-check-label choice-label" for="noDrink">
                No
            </label>
        </div>
        <!--Body Type-->
        <div class="criteria">
            <label for="last-login" class="filter-label">Body Type:</label><br>
            {% for type in bodyTypes %}
                <input class="form-check-input" type="checkbox" id="{{ type }}" name="body" value="{{ type }}" autocomplete="off">
                <label class="form-check-label choice-label" for="{{ type }}">
                    {{ type }}
                </label>&nbsp;&nbsp;
            {% endfor %}
        </div>
        <!--Religion-->
        <div class="criteria">
            <label for="last-login" class="filter-label">Religion:</label><br>
            {% for type in religions %}
                <input class="form-check-input" type="checkbox" id="{{ type }}" name="religion" value="{{ type }}" autocomplete="off">
                <label class="form-check-label choice-label" for="{{ type }}">
                    {{ type }}
                </label>&nbsp;&nbsp;
            {% endfor %}
        </div>
        <!--Marital Status-->
        <div class="criteria">
            <label for="last-login" class="filter-label">Marital Status:</label><br>
            {% for type in maritalStatuses %}
                <input class="form-check-input" type="checkbox" id="{{ type }}" name="status" value="{{ type }}" autocomplete="off">
                <label class="form-check-label choice-label" for="{{ type }}">
                    {{ type }}{{ ((type == "Widow") and (gender == false)) ? 'er' : '' }}
                </label>&nbsp;&nbsp;
            {% endfor %}
        </div>
    </div>
    <div class="grid">
        <div class="search">
            <!--Search-->
            <span class="search-label">Search</span>
            <span class="fas fa-search search-icon" id="search-icon"></span><br><br>
            <!--Reset-->
            <span id="reset-label" class="search-label reset">Reset</span>
