{% extends "member_base.html.twig" %}

{% block scripts %}
<script src="{{ asset('member_assets/js/jquery-3.2.1.min.js') }} "></script>
<script type="text/javascript">
    $(document).ready(function () {

        {% for m in sides %}

        $('#{{ m.id }}').click(function (){

            $.ajax({
                url: "{{path('increment')}}",
                type: "POST",
                cache: false,
                data: {
                    "id" : $('#{{ m.id }}').attr('id')
                },

            });
        });

        {% endfor %}
        {% for m in bigs %}

        $('#{{ m.id }}').click(function (){

            $.ajax({
                url: "{{path('increment')}}",
                type: "POST",
                cache: false,
                data: {
                    "id" : $('#{{ m.id }}').attr('id')
                },

            });
        });

        {% endfor %}
 });

</script>
{% endblock %}
{% block title %}News Feed{% endblock %}

       {% block banner %}

           {% for m in bigs %}
               {% for i in [1..10]%}
               <section class="banner_area" style="background: url({% block banner_img %} {{ asset('member_assets/images/') }}{{ m.photoUrl}}{% endblock %}) no-repeat scroll center center; background-size: cover;">
                   <div class="container">
                       <div class="banner_content">

                           <br><br><br><br><br><br><br><br><br><br>
                           <a  id="{{ m.id }}"+i ><i class="fa fa-heart" aria-hidden="true" style="height: 300px;"></i></a>
                       </div>
                   </div>
               </section>
           {% endfor %}
           {% endfor %}
       {% endblock %}
{% block body %}

    <section class="blog_grid_area">

        <div class="container">
            {% for m in sides %}
                {% for i in [1..10]  %}
                    {% if m.videoUrl == null  %}
                        <div class="row">
                            <div class="blog_grid_inner">
                                <div class="col-md-3 col-sm-6">
                                    <div class="blog_grid_item">
                                        <div class="blog_grid_img">
                                            <img src="{{ asset('member_assets/') }}images/{{ m.photoUrl }}" alt="" style="width: 280px ; height : 250px">
                                            <div class="blog_share_area">
                                                <a></a>
                                                <a   id="{{ m.id }}"+i  ><i class="fa fa-heart" aria-hidden="true"></i>{{ m.clicks }}</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    {% elseif  'https://www.youtube.com/embed/' in m.videoUrl %}
                        <iframe width="280" height="250"
                                src="{{ m.videoUrl }}">
                        </iframe>
                        {% else  %}
                        <div class="row">
                            <div class="blog_grid_inner">
                                <div class="col-md-3 col-sm-6">
                                    <div class="blog_grid_item">
                                        <div class="blog_grid_img">
                                            <img src="{{ asset('member_assets/') }}images/{{ m.photoUrl }}" alt="" style="width: 280px ; height : 250px">
                                            <div class="blog_share_area">
                                                <a   id="{{ m.id }}"+i  ><i class="fa fa-heart" aria-hidden="true"></i>{{ m.clicks }}</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    {% endif %}
                    <br>
                {% endfor %}
            {% endfor %}
        </div>
    </section>

    <br>
    <br><br><br><br><br>


    <!--================Blog slider Area =================-->
    <section class="blog_slider_area">

        <div class="blog_slider_inner">
            {% for m in sides %}
                <div class="item">
                <div class="single_blog_slider">
                    <img src="{{ asset('member_assets/images/') }}{{ m.photoUrl}}"alt="" style="width: 350px ; height: 400px">
                    <div class="blog_item_content">
                        <h4>{{ m.content }}</h4>
                        <h5>{{ m.reason }}<span>|</span> {{ m.reason }}</h5>
                        <ul>
                            <li><a href="#"><i class="fa fa-search"></i></a></li>
                            <li><a href="#"><i class="fa fa-link"></i></a></li>
                        </ul>
                    </div>
                </div>
                </div>
            {% endfor %}
        </div>
    </section>
    <!--================End Blog slider Area =================-->
{% endblock %}



