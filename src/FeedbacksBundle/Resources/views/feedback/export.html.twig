
{% block title %}<br> <br> <br>{% endblock %}
{% block body %}
    <section >
    <img src="{{ absolute_url ( asset('admin_assets/img/3.png')) }}" alt="rien" align="center" style="margin-left: 10cm;width: 8cm; height: 2.5cm; margin-top: -1cm;"/><br><br><br>
<table  id="dynamic-table" class="table table-striped table-bordered table-hover" border="1" bgcolor="white"  width="1000" style="height: 650px"  >
    <thead>
    <tr style="background-color: #384659; " >
        <th style="color: white"><p style="font-size: 25px">Sender</p></th>
        <th style="color: white"><p style="font-size: 25px">Date</p></th>
        <th style="color: white"><p style="font-size: 25px">Content</p></th>
        <th style="color: white"><p style="font-size: 25px">State</p></th>
    </tr>
    </thead>
    <tbody>
    {% for feedback in feedbacks %}
        <tr>
            <td><p style="font-size: 20px">{% if feedback.sender.username is defined and feedback.sender.username is not null %} {{ feedback.sender.username }} {% endif %}</p></td>
            <td><p style="font-size: 20px">{% if feedback.date %}{{ feedback.date|date('Y-m-d H:i:s') }}{% endif %}</p></td>
            <td><p style="font-size: 20px">{{ feedback.content }}</p></td>
            <td><p style="font-size: 20px">{% if feedback.state %}<strong style="color: #1e7e34">Treated</strong>{% else %}<strong style="color: #fa4832">Non_Treated</strong>{% endif %}</p></td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>

    </tfoot>
</table>
    </section>
{% endblock body %}