<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="_message_inbox" path="/">
        <default key="_controller">MessageBundle:Message:inbox</default>
    </route>

    <route id="_message_sent" path="/sent">
        <default key="_controller">MessageBundle:Message:sent</default>
    </route>

    <route id="_message_deleted" path="/deleted">
        <default key="_controller">MessageBundle:Message:deleted</default>
    </route>

    <route id="_message_search" path="/search">
        <default key="_controller">MessageBundle:Message:search</default>
    </route>

    <route id="_message_thread_new" path="/new">
        <default key="_controller">MessageBundle:Message:newThread</default>
    </route>

    <route id="_message_thread_delete" path="/{threadId}/delete" methods="POST|DELETE">
        <default key="_controller">MessageBundle:Message:delete</default>
    </route>

    <route id="_message_thread_undelete" path="/{threadId}/undelete" methods="POST">
        <default key="_controller">MessageBundle:Message:undelete</default>
    </route>

    <route id="_message_thread_view" path="/{threadId}">
        <default key="_controller">MessageBundle:Message:thread</default>
    </route>
    
</routes>
