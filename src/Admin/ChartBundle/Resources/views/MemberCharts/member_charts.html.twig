{% extends 'admin_base.html.twig' %}
{% block title %}Admin | Member Charts{% endblock %}
{% block page_title %}Member Charts{% endblock %}
{% block body %}
    <h2>Total number of Members: {{ total_number }}</h2>
    <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
    <div id="piechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('admin_assets/scripts/charts/highcharts.src.js') }}"></script>
    <script src="{{ asset('admin_assets/scripts/charts/exporting.js') }}"></script>
    <script type="text/javascript">
        {{ chart(member_number) }}
        {{ chart(member_gender) }}
    </script>
{% endblock %}