{% extends 'admin_base.html.twig' %}
{% block title %}Admin | Member Charts{% endblock %}
{% block page_title %}Member Charts{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('member_assets/css/card.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}

    <div class="row card-container" style="width: 100%;">
        <div class="col-md-12">
            <div class="card horizontal" style="">
                <div class="card-stacked" style="">
                    <div class="card-content" style="width: 100%;">
                        <div id="linechart" style="margin-bottom: 50px; min-width: 400px; height: 400px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div style="">
        <div class="row card-container" style="width: 40%; height: 100%; display: inline-block;">
            <div class="col-md-12">
                <div class="card horizontal" style="">
                    <div class="card-stacked" style="">
                        <div class="card-content" style="width: 100%;">
                            <div id="piechart"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row card-container" style="width: 59.7%; height: 100%; display: inline-block">
            <div class="col-md-12">
                <div class="card horizontal" style="">
                    <div class="card-stacked" style="">
                        <div class="card-content" style="width: 100%;">
                            <div id="cumlinechart" style=""></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row card-container" style="width: 100%;">
        <div class="col-md-12">
            <div class="card horizontal" style="">
                <div class="card-stacked" style="">
                    <div class="card-content" style="width: 100%;">
                        <div id="barchart" style=""></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('admin_assets/scripts/charts/highcharts.src.js') }}"></script>
    <script src="{{ asset('admin_assets/scripts/charts/exporting.js') }}"></script>
    <script type="text/javascript">
        {{ chart(member_iscription) }}
        {{ chart(member_gender) }}
        {{ chart(number_by_city) }}
        {{ chart(cum_number) }}
    </script>
{% endblock %}