{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register', 'id': 'register_form'}}) }}
    <div id="first" class="form-group">
        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Email'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.firstname, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Firstname', 'required': 'true'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.lastname, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Lastname', 'required': 'true'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.username, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Username', 'required': 'true'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Password'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': "form-control first-control control", 'placeholder': 'Confirm Password'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.gender, { 'attr': {'class': "first-control control", 'required': 'true' } }) }}
        </div>
    </div>
    <div id="second" class="form-group">
        <div class="form-group">
            <label for="fos_user_registration_form_birthDate">Birthday</label>
            {{ form_widget(form.birthDate, { 'attr': {'class': "form-control second-control control", 'placeholder': "Birthday", 'required': 'true' } }) }}
        </div>
        <label>Looking for {% if(form.gender) %}girls{% else %}guys{% endif %} between</label>
        <div class="row">
            <div class="form-group col-xs-6">
                {{ form_widget(form.minAge, { 'attr': {
                    'class': "form-control second-control control",
                    'value': 18,
                    'min': 18,
                    'max': 69,
                    'placeholder': 'Minimum age',
                    'onChange': 'updateMaxAge()',
                    'required': 'true',
                    'pattern': '\d*'
                } }) }}
            </div>
            <div class="form-group col-xs-6">
                {{ form_widget(form.maxAge, { 'attr': {
                    'class': "form-control second-control control",
                    'value': 19,
                    'min': 19,
                    'max': 70,
                    'placeholder': 'Maximum age',
                    'required': 'true',
                    'pattern': '\d*'
                } }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(form.height, { 'attr': {
                'class': "form-control second-control control",
                'placeholder': "Height",
                'required': 'true',
                'pattern': "^([1-3])(?:\.[0-9][0-9]?)?$",
                'title': "Height must be between 1 and 3 meters"
            } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.bodyType, { 'attr': {'class': "second-control control", 'required': 'true'  } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.relegion, { 'attr': {'class': "second-control control", 'required': 'true'  } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.relegionImportance, { 'attr': {'class': "second-control control", 'required': 'true'  } }) }}
        </div>
    </div>
    <div id="third" class="form-group">
        <div class="form-group">
            {{ form_widget(form.childrenNumber, { 'attr': {'class': "form-control third-control control", 'placeholder': "Number of children", 'min': 0, 'max': 10, 'step': 1, 'required': 'true'  } }) }}
        </div>
        <div class="form-group">
            <label>Do you smoke?</label>
            {{ form_widget(form.smoker, { 'attr': {'class': "form-control third-control control"} }) }}
            <label for="fos_user_registration_form_smoker">Yes</label>
        </div>
        <div class="form-group">
            <label>Do you drink?</label>
            {{ form_widget(form.drinker, { 'attr': {'class': "form-control third-control control"} }) }}
            <label for="fos_user_registration_form_drinker">Yes</label>
        </div>
        <div class="form-group">
            {{ form_widget(form.phone, { 'attr': {
                'class': "form-control third-control control",
                'placeholder': "Phone number",
                'min': 11111111,
                'max': 99999999,
                'required': 'true'
            } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.civilStatus, { 'attr': {'class': "second-control control", 'required': 'true' } }) }}
        </div>
        <div class="form-group">
            <label>Preferd marital statuses</label>
            {{ form_widget(form.preferedStatuses, { 'attr': {'class': "second-control control", 'required': 'true' } }) }}
        </div>
        <div class="form-group">
            <label>Preferd relations</label><span class="form_error" id="prefered_relations_error">At least one prefered relation needs to be selected</span>
            {{ form_widget(form.preferedRelations, { 'attr': {'class': "second-control control", 'required': 'true' } }) }}
        </div>
    </div>
    <div id="fourth" class="form-group">
        <div style="margin-bottom: 10px;">
            <label>Address </label><button type="button" class="btn btn-default btn-sm" style="float: right;" id="locate"><span class="glyphicon glyphicon-screenshot"></span> Locate me</button>
        </div>
        <div class="row">
            <div class="form-group col-xs-7">
                {{ form_widget(form.address.city, { 'attr': {'class': "form-control third-control control", 'placeholder': "City", 'required': 'true' } }) }}
            </div>
            <div class="form-group col-xs-5">
                {{ form_widget(form.address.country, { 'attr': {'class': "form-control third-control control", 'placeholder': "Country", 'required': 'true', 'readonly': 'true'} }) }}
            </div>
            <div class="form-group col-xs-6">
                {{ form_widget(form.address.latitude, { 'attr': {'style': 'display: none;' } }) }}
            </div>
            <div class="form-group col-xs-6">
                {{ form_widget(form.address.longitude, { 'attr': {'style': 'display: none;' } }) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(form.about, { 'attr': {'class': "form-control third-control control", 'placeholder': "About", 'style': "height: 300px;" } }) }}
        </div>
    </div>
<div class="reg_chose form-group">
    <div id="step_one">
        <button type="button" style="margin-bottom: 20px;" class="btn form-control login_btn next_step">Register</button>
    </div>
    <div id="step_two">
        <button type="button" style="margin-bottom: 20px; margin-left: 10px;" class="btn form-control login_btn scd_step">Next</button>
        <button type="button" style="margin-bottom: 20px;" class="btn form-control login_btn bck_scd_step">Back</button>
    </div>
    <div id="step_three">
        <button type="button" style="margin-bottom: 20px; margin-left: 10px;" class="btn form-control login_btn thrd_step">Next</button>
        <button type="button" style="margin-bottom: 20px;" class="btn form-control login_btn bck_thrd_step">Back</button>
    </div>
    <div id="step_four">
        <button id="final_register" style="margin-bottom: 20px; margin-left: 10px;" type="submit" value="{{ 'registration.submit'|trans }}" class="btn form-control login_btn">Register</button>
        <button type="button" style="margin-bottom: 20px;" class="btn form-control login_btn bck_frth_step">Back</button>
    </div>
</div>
{{ form_end(form) }}
